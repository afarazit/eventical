<% if @calendar.empty? %>
  <section class="text-center p-5">
    <h3>You have no upcoming events.</h3>
  </section>
<% else %>
  <section class="text-small text-left feed_settings">
    <%= form_with(method: :get, local: true, class: "form-inline") do |f| %>
      <label for="tz" class="my-2 mr-2">Times shown for </label>
      <%= select_tag(:tz, time_zone_options_for_select(@calendar.time_zone.name)) %>
      <%= f.submit("Change", class: "btn btn-link") %>
    <% end %>
  </section>
  <section class="text-left">
    <table class="table">
      <% @calendar.agenda.each do |entry| %>
        <%= render "event_list",
          date: entry.date,
          events: entry.events,
          preferred_time_zone: @calendar.time_zone %>
      <% end %>
    </table>
  </section>
<% end %>
