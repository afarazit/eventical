<section class="my-2">
  <div class="container">
    <div class="row">
      <div class="card">
        <div class="card-header">Secret address</div>
        <div class="card-body">
          <h6 class="card-title">
            <%= link_to(nil, calendar_feed_url(@personal_token)) %>
          </h6>
          <p>
            Use this address to access this calendar from other applications without making it public.
            <strong>Never share it with anyone.</strong>
          </p>
          <%= form_for @personal_token, url: calendar_path, method: :post do |f| %>
            <div class="form-row">
              <div class="col-sm-6 col-md-8">
                <p>You can reset this address and make the current one invalid.</p>
              </div>
              <div class="col-sm-6 col-md-4">
                <button class="btn btn-outline-danger btn-block"
                        id="btn-reset-private-address"
                        type="submit">Reset secret address</button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

